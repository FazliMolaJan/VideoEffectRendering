<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingRight="20dp" >


    <View
        android:id="@+id/view_0"
        android:layout_width="3dp"
        android:layout_height="25dp"
        android:layout_below="@+id/layout_1"
        android:layout_marginLeft="40dp"
        android:background="#A6A6A6" />

    <View
        android:id="@+id/view_1"
        android:layout_width="3dp"
        android:layout_height="25dp"
        android:layout_below="@+id/layout_2"
        android:layout_marginLeft="40dp"
        android:background="#A6A6A6" />

    <TextView
        android:id="@+id/show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="5dp"
        android:text="17:05"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="34dp"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/view_2"
        android:layout_width="3dp"
        android:layout_height="270dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="40dp"
        android:background="#55cb9090" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="-20dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_content" >

 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/news_item_background"
        android:orientation="vertical"
        android:paddingTop="4dip" >

       
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:orientation="horizontal" >
                 
           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="220dp"
               android:orientation="horizontal" > 
               <ImageView
                   android:id="@+id/user_info_item_photo"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:background="@drawable/head"
                   android:layout_alignParentTop="true"
                   android:scaleType="centerCrop"/>  
                   <ImageView
                       android:id="@+id/user_info_item_playbutton"
                       android:layout_width="45dip"
                       android:layout_height="45dip"
                       android:layout_centerHorizontal="true"
                       android:layout_centerVertical="true"
                       android:scaleType="fitCenter"
                       android:src="@drawable/play" />
                   
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#66ffffff"
                   android:layout_alignParentBottom="true">  
                   <TextView
                       android:id="@+id/user_info_item_content"
                       android:layout_width="fill_parent"
                       android:layout_height="35dip"
                       android:textColor="#FFFFFF"
                       android:maxEms="10" 
                       android:ellipsize="end"
                       android:singleLine="true"
                       android:textSize="14sp" 
                       android:paddingTop="8dip"
                       android:paddingBottom="8dip"
                       android:paddingLeft="8dip"
                       android:paddingRight="8dip" />
               </LinearLayout>     
           </RelativeLayout>
        </LinearLayout>        
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fffafafa" />

       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="4dip"
            android:paddingTop="4dip" 
          android:background="#fffafafa"
            >

<View
                android:layout_width="40px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip" />

            <TextView
                android:id="@+id/user_info_item_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/news_commentlike_comment"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:background="#fff0f0f0" />
            
            <TextView
                android:id="@+id/user_info_item_forward_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/news_commentlike_fw"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:background="#fff0f0f0" />
            
          
            <TextView
 android:id="@+id/user_info_item_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:drawableLeft="@drawable/news_commentlike_like"
                android:textColor="#ffbbbbbb"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

   
     </LinearLayout> 
    
</RelativeLayout>


