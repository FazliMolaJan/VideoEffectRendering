<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/nerve_corner_list_top"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
 	    
 	<TextView
 	    android:id="@+id/cell_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
	    style="@style/nerver_list_title"
	    />
 	
 	<TextView
 	    android:id="@+id/cell_value"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	 	android:layout_marginRight="25dp"
	    style="@style/nerver_list_info"
	   />
 	    
    <ImageView 
        android:id="@+id/cell_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/nerve_corner_arrow_size"
        android:layout_height="@dimen/nerve_corner_arrow_size"
        style="@style/nerve_arrow"
        android:contentDescription="@null"
        />
 	    
</RelativeLayout>